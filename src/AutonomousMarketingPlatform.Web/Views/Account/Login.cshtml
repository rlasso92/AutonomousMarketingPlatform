@model AutonomousMarketingPlatform.Application.DTOs.LoginDto
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_AuthLayout";
}

<div class="login-form">
    <!-- Title -->
    <h1 class="login-title">Autonomous Marketing</h1>
    <p class="login-subtitle">El sistema que genera y publica marketing por ti</p>
            
    <!-- Tenant Info -->
    @if (!string.IsNullOrEmpty(ViewData["TenantId"]?.ToString()))
    {
        <div class="alert alert-info">
            <strong>Tenant:</strong> @ViewData["TenantId"]
        </div>
    }
    
    <!-- Lockout Warning -->
    @if (ViewData["LockoutEnd"] != null)
    {
        <div class="alert alert-warning">
            <strong>Cuenta bloqueada</strong><br>
            Tu cuenta ha sido bloqueada temporalmente hasta: @(((DateTime?)ViewData["LockoutEnd"])?.ToString("g"))
        </div>
    }
    
    <!-- Remaining Attempts Warning -->
    @if (ViewData["RemainingAttempts"] != null && (int)ViewData["RemainingAttempts"]! < 5)
    {
        <div class="alert alert-warning">
            <strong>Atención</strong><br>
            Intentos restantes: @ViewData["RemainingAttempts"]
        </div>
    }
    
    <!-- Validation Summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul style="margin: 0; padding-left: 20px;">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
            
    <!-- Login Form -->
    <form asp-action="Login" asp-controller="Account" method="post" id="loginForm">
        @Html.AntiForgeryToken()
        
        @if (ViewData["TenantId"] != null)
        {
            <input type="hidden" asp-for="TenantId" name="TenantId" value="@ViewData["TenantId"]" />
        }
        else
        {
            <input type="hidden" asp-for="TenantId" name="TenantId" value="" />
        }
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
        
        <!-- Email Field -->
        <div class="form-group">
            <input 
                asp-for="Email" 
                name="Email"
                id="Email"
                type="email" 
                class="form-control" 
                placeholder="Correo electrónico" 
                required 
                autocomplete="email"
                autofocus>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <!-- Password Field -->
        <div class="form-group">
            <input 
                asp-for="Password" 
                name="Password"
                id="Password"
                type="password" 
                class="form-control" 
                placeholder="Contraseña" 
                required 
                autocomplete="current-password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <!-- Remember Me -->
        <div class="form-group">
            <label>
                <input type="checkbox" asp-for="RememberMe" name="RememberMe" id="remember" value="true">
                Recordarme
            </label>
        </div>
        
        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary" id="loginBtn">
            Iniciar sesión
        </button>
    </form>
</div>

@section Scripts {
    <script>
        (function() {
            'use strict';
            
            const form = document.getElementById('loginForm');
            const submitBtn = document.getElementById('loginBtn');
            
            if (form && submitBtn) {
                form.addEventListener('submit', function(e) {
                    if (form.checkValidity()) {
                        submitBtn.disabled = true;
                        submitBtn.textContent = 'Validando...';
                    } else {
                        e.preventDefault();
                    }
                });
            }
        })();
    </script>
}
