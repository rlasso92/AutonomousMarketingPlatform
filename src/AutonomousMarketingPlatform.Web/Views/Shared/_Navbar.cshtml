<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
    </ul>
    
    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <!-- Notifications Dropdown Menu -->
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="far fa-bell"></i>
                <span class="badge badge-warning navbar-badge" id="notification-count">0</span>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <span class="dropdown-item dropdown-header">Notificaciones</span>
                <div class="dropdown-divider"></div>
                <a href="#" class="dropdown-item">
                    <i class="fas fa-info-circle mr-2"></i> Sistema funcionando correctamente
                </a>
            </div>
        </li>
        
        <!-- Tenant Info -->
        @if (User.Identity?.IsAuthenticated == true)
        {
            <li class="nav-item d-none d-sm-inline-block">
                <span class="nav-link">
                    <i class="fas fa-building mr-1"></i>
                    <small class="text-muted">Tenant:</small>
                    <strong>@User.FindFirst("TenantId")?.Value</strong>
                </span>
            </li>
        }
        
        <!-- User Dropdown Menu -->
        @if (User.Identity?.IsAuthenticated == true)
        {
            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="far fa-user mr-1"></i>
                    <span class="d-none d-md-inline">@User.FindFirst("FullName")?.Value ?? @User.Identity.Name</span>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <span class="dropdown-item dropdown-header">
                        @User.FindFirst("FullName")?.Value ?? @User.Identity.Name
                    </span>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item">
                        <i class="fas fa-user mr-2"></i> Perfil
                    </a>
                    <a href="#" class="dropdown-item">
                        <i class="fas fa-cog mr-2"></i> Configuración
                    </a>
                    <div class="dropdown-divider"></div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item">
                            <i class="fas fa-sign-out-alt mr-2"></i> Cerrar Sesión
                        </button>
                    </form>
                </div>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Login">
                    <i class="fas fa-sign-in-alt mr-1"></i> Iniciar Sesión
                </a>
            </li>
        }
    </ul>
</nav>

