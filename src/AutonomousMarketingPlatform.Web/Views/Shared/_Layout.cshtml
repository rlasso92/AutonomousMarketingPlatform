<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutonomousMKT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutonomousMarketingPlatform.Web.styles.css" asp-append-version="true" />
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header d-flex align-items-center justify-content-between px-3 py-3">
            <div class="brand d-flex align-items-center gap-2 overflow-hidden">
                <i class="fas fa-rocket text-primary fs-4"></i>
                <span class="brand-text fw-bold text-dark fs-5 ms-1">AutonomousMKT</span>
            </div>
            <button
                class="btn btn-outline-secondary border-0 bg-light text-muted p-0 d-flex align-items-center justify-content-center sidebar-toggle-btn shadow-sm"
                onclick="toggleSidebar()" style="width: 32px; height: 32px; border-radius: 4px;">
                <i class="fas fa-chevron-left" id="sidebarToggleIcon" style="font-size: 0.8rem;"></i>
            </button>
        </div>

        <nav class="mt-4 flex-grow-1">
            <a asp-controller="Home" asp-action="Index" class="nav-link"><i class="fas fa-home"></i>
                <span>Home</span></a>
            <a asp-controller="Dashboard" asp-action="Index" class="nav-link"><i class="fas fa-tachometer-alt"></i>
                <span>Metrics</span></a>
            <a asp-controller="Campaigns" asp-action="Index" class="nav-link"><i class="fas fa-bullhorn"></i>
                <span>Campaigns</span></a>
            <a asp-controller="Contacts" asp-action="Index" class="nav-link"><i class="fas fa-address-book"></i>
                <span>Contacts</span></a>
            <a asp-controller="Templates" asp-action="Index" class="nav-link"><i class="fas fa-palette"></i>
                <span>Templates</span></a>
            <a asp-controller="Content" asp-action="Index" class="nav-link"><i class="fas fa-file-alt"></i>
                <span>Content</span></a>
            <a asp-controller="Consents" asp-action="Index" class="nav-link"><i class="fas fa-check-circle"></i>
                <span>Consents</span></a>
            <a asp-controller="MarketingPacks" asp-action="Index" class="nav-link"><i class="fas fa-box-open"></i>
                <span>Marketing Packs</span></a>
            <a asp-controller="PublishJobs" asp-action="Index" class="nav-link"><i class="fas fa-paper-plane"></i>
                <span>Publishing Jobs</span></a>
            <a asp-controller="MarketingMemories" asp-action="Index" class="nav-link"><i class="fas fa-brain"></i>
                <span>Marketing Memory</span></a>
        </nav>

        <div class="mt-auto mb-3">
            <a asp-controller="Users" asp-action="Index" class="nav-link"><i class="fas fa-user-shield"></i>
                <span>Admin</span></a>
            <a asp-controller="Profile" asp-action="Index" class="nav-link"><i class="fas fa-user-circle"></i>
                <span>Profile</span></a>
            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-none"></form>
            <a href="#" class="nav-link text-danger" onclick="document.getElementById('logoutForm').submit();">
                <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
