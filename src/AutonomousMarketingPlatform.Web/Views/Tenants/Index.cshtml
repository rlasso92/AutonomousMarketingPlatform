@model List<AutonomousMarketingPlatform.Application.DTOs.TenantDto>
@{
    ViewData["Title"] = "Tenants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-building mr-2"></i>Tenants</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Tenants</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-list mr-2"></i>Lista de Tenants</h3>
                            <div class="card-tools">
                                <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus mr-1"></i>Nuevo Tenant
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (Model != null && Model.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Subdomain</th>
                                                <th>Email Contacto</th>
                                                <th>Usuarios</th>
                                                <th>Estado</th>
                                                <th>Creado</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var tenant in Model)
                                            {
                                                <tr>
                                                    <td><strong>@tenant.Name</strong></td>
                                                    <td>@(tenant.Subdomain ?? "N/A")</td>
                                                    <td>@(tenant.ContactEmail ?? "N/A")</td>
                                                    <td>@tenant.UserCount</td>
                                                    <td>
                                                        @if (tenant.IsActive)
                                                        {
                                                            <span class="badge badge-success">Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">Inactivo</span>
                                                        }
                                                    </td>
                                                    <td>@tenant.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>
                                                        <a href="@Url.Action("Edit", new { id = tenant.Id })" class="btn btn-sm btn-warning" title="Editar">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle mr-2"></i>No hay tenants registrados.
                                    <a href="@Url.Action("Create")" class="btn btn-sm btn-primary ml-2">
                                        <i class="fas fa-plus mr-1"></i>Crear Primer Tenant
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(function () {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}

