@{
    ViewData["Title"] = "Contacts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-dark fw-bold mb-1"><i class="fas fa-address-book me-2 text-primary"></i>Contacts</h2>
        <p class="text-muted">Manage your customer contacts.</p>
    </div>
</div>

<!-- Actions Bar -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="position-relative" style="width: 300px;">
        <i class="fas fa-search position-absolute text-muted" style="left: 10px; top: 10px;"></i>
        <input type="text" id="contactSearch" class="form-control ps-5" placeholder="Search contacts...">
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-warning fw-bold text-white shadow-sm" data-bs-toggle="modal" data-bs-target="#contactModal" onclick="resetContactModal()"><i class="fas fa-plus me-1"></i> Add Contact</button>
    </div>
</div>

<!-- Contacts Table -->
<div class="card overflow-hidden border-0 shadow-sm">
    <table class="table table-custom mb-0" id="contactsTable">
        <thead>
            <tr>
                <th class="ps-4">Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Subscription</th>
                <th class="text-end pe-4">Actions</th>
            </tr>
        </thead>
        <tbody id="contactsTableBody">
            <!-- Data will be loaded via jQuery -->
        </tbody>
    </table>
     <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center p-3 border-top bg-light">
         <div class="text-muted small">Showing <span id="startRange">0</span> to <span id="endRange">0</span> of <span id="totalRecords">0</span> results</div>
         <nav>
             <ul class="pagination pagination-sm mb-0" id="pagination">
                 <!-- Pagination links -->
             </ul>
         </nav>
    </div>
</div>


<!-- Add/Edit Contact Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light border-bottom">
                 <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-2 rounded me-3 text-primary">
                        <i class="fas fa-address-book fa-lg"></i>
                    </div>
                    <div>
                        <h5 class="modal-title fw-bold text-dark" id="contactModalTitle">Add Contact</h5>
                        <small class="text-muted">Create a new customer contact.</small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="contactForm">
                    <input type="hidden" id="contactId">
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-danger ps-2">Email *</label>
                        <input type="email" class="form-control" id="contactEmail" placeholder="Enter email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-warning ps-2">First Name *</label>
                        <input type="text" class="form-control" id="contactFirstName" placeholder="Enter first name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-info ps-2">Last Name *</label>
                        <input type="text" class="form-control" id="contactLastName" placeholder="Enter last name" required>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="isSubscribed" checked>
                        <label class="form-check-label" for="isSubscribed">
                            Is Subscribed
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top bg-light">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Clear</button>
                <button type="button" class="btn btn-primary shadow-sm" onclick="saveContact()"><i class="fas fa-plus me-1"></i> <span id="saveBtnText">Add Contact</span></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/contacts.js"></script>
}
