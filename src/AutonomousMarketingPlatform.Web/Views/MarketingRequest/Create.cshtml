@model AutonomousMarketingPlatform.Web.Controllers.MarketingRequestDto
@{
    ViewData["Title"] = "Solicitar Contenido de Marketing";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var campaignId = ViewBag.CampaignId as Guid?;
    var model = Model ?? new AutonomousMarketingPlatform.Web.Controllers.MarketingRequestDto
    {
        CampaignId = campaignId,
        Channels = new List<string> { "instagram" },
        RequiresApproval = false
    };
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-magic mr-2"></i>Solicitar Contenido de Marketing</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Solicitar Contenido</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-robot mr-2"></i>Generación Automática con IA
                            </h3>
                        </div>
                        <form asp-action="Create" method="post">
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle mr-2"></i>
                                    <strong>¿Cómo funciona?</strong> Describe el contenido que necesitas y nuestro sistema de IA lo generará automáticamente mediante n8n.
                                    El contenido se creará y estará disponible en breve.
                                </div>

                                @if (campaignId.HasValue)
                                {
                                    <div class="form-group">
                                        <label>Campaña Asociada</label>
                                        <input type="text" class="form-control" value="@campaignId.Value.ToString()" disabled />
                                        <input type="hidden" asp-for="CampaignId" value="@campaignId.Value" />
                                        <small class="form-text text-muted">Esta solicitud estará asociada a la campaña seleccionada.</small>
                                    </div>
                                }
                                else
                                {
                                    <input type="hidden" asp-for="CampaignId" value="" />
                                }

                                <div class="form-group">
                                    <label for="Instruction">
                                        Instrucción o Descripción <span class="text-danger">*</span>
                                    </label>
                                    <textarea id="Instruction" name="Instruction" class="form-control" rows="5" 
                                              placeholder="Ejemplo: Crear contenido de marketing para Instagram promocionando nuestro nuevo producto de verano. Enfocarse en público joven de 18-35 años, usar tono casual y divertido.">@(model?.Instruction ?? "")</textarea>
                                    <span asp-validation-for="Instruction" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Describe detalladamente qué tipo de contenido necesitas. Mientras más específico seas, mejor será el resultado.
                                    </small>
                                </div>

                                <div class="form-group">
                                    <label>
                                        Canales de Publicación <span class="text-danger">*</span>
                                    </label>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-check">
                                                <input class="form-check-input channel-checkbox" type="checkbox" value="instagram" 
                                                       @(model?.Channels?.Contains("instagram", StringComparer.OrdinalIgnoreCase) == true ? "checked" : "") />
                                                <label class="form-check-label">
                                                    <i class="fab fa-instagram mr-1"></i>Instagram
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-check">
                                                <input class="form-check-input channel-checkbox" type="checkbox" value="facebook" 
                                                       @(model?.Channels?.Contains("facebook", StringComparer.OrdinalIgnoreCase) == true ? "checked" : "") />
                                                <label class="form-check-label">
                                                    <i class="fab fa-facebook mr-1"></i>Facebook
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-check">
                                                <input class="form-check-input channel-checkbox" type="checkbox" value="tiktok" 
                                                       @(model?.Channels?.Contains("tiktok", StringComparer.OrdinalIgnoreCase) == true ? "checked" : "") />
                                                <label class="form-check-label">
                                                    <i class="fab fa-tiktok mr-1"></i>TikTok
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-check">
                                                <input class="form-check-input channel-checkbox" type="checkbox" value="twitter" 
                                                       @(model?.Channels?.Contains("twitter", StringComparer.OrdinalIgnoreCase) == true ? "checked" : "") />
                                                <label class="form-check-label">
                                                    <i class="fab fa-twitter mr-1"></i>Twitter
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" id="ChannelsJson" name="ChannelsJson" />
                                    <span class="text-danger field-validation-valid" data-valmsg-for="Channels" data-valmsg-replace="true"></span>
                                    <small class="form-text text-muted">Selecciona al menos un canal donde se publicará el contenido.</small>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        <input id="RequiresApproval" name="RequiresApproval" class="form-check-input" type="checkbox" value="true" @(model?.RequiresApproval == true ? "checked" : "") />
                                        <input type="hidden" name="RequiresApproval" value="false" />
                                        <label for="RequiresApproval" class="form-check-label">
                                            Requiere aprobación manual antes de publicar
                                        </label>
                                        <small class="form-text text-muted d-block">
                                            Si está marcado, el contenido se generará pero necesitará tu aprobación antes de publicarse.
                                            Si no está marcado, se publicará automáticamente una vez generado.
                                        </small>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="AssetsText">URLs de Assets (Opcional)</label>
                                    <textarea id="AssetsText" name="AssetsText" class="form-control" rows="3" 
                                              placeholder="https://ejemplo.com/imagen1.jpg&#10;https://ejemplo.com/video1.mp4">@(model?.AssetsText ?? (model?.Assets != null ? string.Join("\n", model.Assets) : ""))</textarea>
                                    <small class="form-text text-muted">
                                        Ingresa una URL por línea. Estas imágenes o videos se usarán en el contenido generado.
                                    </small>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane mr-2"></i>Enviar Solicitud a n8n
                                </button>
                                <a href="/" class="btn btn-secondary">
                                    <i class="fas fa-times mr-1"></i>Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Actualizar el campo hidden con los canales seleccionados
            function updateChannels() {
                var selectedChannels = [];
                $('.channel-checkbox:checked').each(function() {
                    selectedChannels.push($(this).val());
                });
                $('#ChannelsJson').val(JSON.stringify(selectedChannels));
            }

            $('.channel-checkbox').on('change', function() {
                updateChannels();
            });

            // Inicializar al cargar
            updateChannels();

            // Validar que al menos un canal esté seleccionado
            $('form').on('submit', function(e) {
                var selectedChannels = [];
                $('.channel-checkbox:checked').each(function() {
                    selectedChannels.push($(this).val());
                });

                if (selectedChannels.length === 0) {
                    e.preventDefault();
                    alert('Por favor, selecciona al menos un canal de publicación.');
                    return false;
                }

                // Asegurar que los canales estén actualizados
                updateChannels();
            });
        });
    </script>
}

