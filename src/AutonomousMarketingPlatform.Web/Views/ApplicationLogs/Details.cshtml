@model AutonomousMarketingPlatform.Application.DTOs.ApplicationLogDto
@{
    ViewData["Title"] = "Detalles del Log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-file-alt mr-2"></i>Detalles del Log</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Logs</a></li>
                        <li class="breadcrumb-item active">Detalles</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Información General</h3>
                            <div class="card-tools">
                                <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-arrow-left mr-1"></i>Volver
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">ID:</dt>
                                <dd class="col-sm-9"><code>@Model.Id</code></dd>

                                <dt class="col-sm-3">Nivel:</dt>
                                <dd class="col-sm-9">
                                    @{
                                        var badgeClass = Model.Level switch
                                        {
                                            "Error" => "badge-danger",
                                            "Warning" => "badge-warning",
                                            "Critical" => "badge-danger",
                                            "Information" => "badge-info",
                                            "Debug" => "badge-secondary",
                                            _ => "badge-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@Model.Level</span>
                                </dd>

                                <dt class="col-sm-3">Origen:</dt>
                                <dd class="col-sm-9"><code>@Model.Source</code></dd>

                                <dt class="col-sm-3">Mensaje:</dt>
                                <dd class="col-sm-9">@Model.Message</dd>

                                <dt class="col-sm-3">Fecha:</dt>
                                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss UTC")</dd>

                                @if (Model.TenantId.HasValue)
                                {
                                    <dt class="col-sm-3">Tenant:</dt>
                                    <dd class="col-sm-9">
                                        <code>@Model.TenantId</code>
                                        @if (!string.IsNullOrEmpty(Model.TenantName))
                                        {
                                            <span class="ml-2">(@Model.TenantName)</span>
                                        }
                                    </dd>
                                }

                                @if (Model.UserId.HasValue)
                                {
                                    <dt class="col-sm-3">Usuario:</dt>
                                    <dd class="col-sm-9">
                                        <code>@Model.UserId</code>
                                        @if (!string.IsNullOrEmpty(Model.UserEmail))
                                        {
                                            <span class="ml-2">(@Model.UserEmail)</span>
                                        }
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.Path))
                                {
                                    <dt class="col-sm-3">Path:</dt>
                                    <dd class="col-sm-9">
                                        <span class="badge badge-secondary">@Model.HttpMethod</span>
                                        <code>@Model.Path</code>
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.RequestId))
                                {
                                    <dt class="col-sm-3">Request ID:</dt>
                                    <dd class="col-sm-9"><code>@Model.RequestId</code></dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.IpAddress))
                                {
                                    <dt class="col-sm-3">IP Address:</dt>
                                    <dd class="col-sm-9"><code>@Model.IpAddress</code></dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.UserAgent))
                                {
                                    <dt class="col-sm-3">User Agent:</dt>
                                    <dd class="col-sm-9"><small>@Model.UserAgent</small></dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.ExceptionType))
                                {
                                    <dt class="col-sm-3">Tipo de Excepción:</dt>
                                    <dd class="col-sm-9"><code>@Model.ExceptionType</code></dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.InnerException))
                                {
                                    <dt class="col-sm-3">Excepción Interna:</dt>
                                    <dd class="col-sm-9">
                                        <pre class="bg-light p-2 rounded"><code>@Model.InnerException</code></pre>
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.StackTrace))
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title"><i class="fas fa-code mr-2"></i>Stack Trace</h3>
                            </div>
                            <div class="card-body">
                                <pre class="bg-dark text-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"><code>@Model.StackTrace</code></pre>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.AdditionalData))
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title"><i class="fas fa-database mr-2"></i>Datos Adicionales</h3>
                            </div>
                            <div class="card-body">
                                <pre class="bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"><code>@Model.AdditionalData</code></pre>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

