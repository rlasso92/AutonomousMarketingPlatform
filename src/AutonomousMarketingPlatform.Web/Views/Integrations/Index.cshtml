<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-dark fw-bold mb-1"><i class="fas fa-puzzle-piece me-2 text-primary"></i>Integrations</h2>
        <p class="text-muted">Manage your third-party service integrations.</p>
    </div>
</div>

<div class="row">
    <div class="col-12 mb-4">
        <h4 class="text-dark fw-bold">Storage Services</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4" id="storageServicesContainer">
            <!-- Storage Service Cards will be loaded here -->
        </div>
    </div>

    <div class="col-12 mb-4">
        <h4 class="text-dark fw-bold">SMS Services</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4" id="smsServicesContainer">
            <!-- SMS Service Cards will be loaded here -->
        </div>
    </div>

    <div class="col-12 mb-4">
        <h4 class="text-dark fw-bold">SMTP Services</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4" id="smtpServicesContainer">
            <!-- SMTP Service Cards will be loaded here -->
        </div>
    </div>
</div>

<!-- Integration Configuration Modal -->
<div class="modal fade" id="integrationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light border-bottom">
                <h5 class="modal-title fw-bold text-dark" id="integrationModalTitle">Configure Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="integrationForm">
                    <input type="hidden" id="integrationId">
                    <input type="hidden" id="serviceCategory">
                    <input type="hidden" id="serviceName">
                    <input type="hidden" id="serviceIconClass">
                    
                    <div class="mb-3">
                        <label for="displayName" class="form-label">Display Name</label>
                        <input type="text" class="form-control" id="displayName" required>
                    </div>

                    <div id="configFieldsContainer">
                        <!-- Dynamic configuration fields will be loaded here based on service -->
                    </div>

                    <div class="form-check form-switch mt-4">
                        <input class="form-check-input" type="checkbox" id="isEnabled">
                        <label class="form-check-label" for="isEnabled">Enable Integration</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top bg-light">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveIntegration()">Save Changes</button>
            </div>
        </div>
    </div>
</div>
