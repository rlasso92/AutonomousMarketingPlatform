@model AutonomousMarketingPlatform.Application.DTOs.CreateCampaignDto
@{
    ViewData["Title"] = "Nueva Campaña";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isSuperAdmin = ViewBag.IsSuperAdmin as bool? ?? false;
    var tenants = ViewBag.Tenants as List<AutonomousMarketingPlatform.Application.DTOs.TenantDto> ?? new List<AutonomousMarketingPlatform.Application.DTOs.TenantDto>();
    var selectedTenantId = ViewBag.SelectedTenantId as Guid?;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-plus mr-2"></i>Nueva Campaña</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Campañas</a></li>
                    <li class="breadcrumb-item active">Nueva</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Información de la Campaña</h3>
                    </div>
                    <form asp-action="Create" method="post" id="createCampaignForm">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                            @if (isSuperAdmin)
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle mr-2"></i>
                                    <strong>SuperAdmin:</strong> Selecciona el tenant para el cual crearás la campaña.
                                </div>
                                <div class="form-group">
                                    <label for="tenantSelect">Tenant <span class="text-danger">*</span></label>
                                    <select class="form-control @(ViewData.ModelState["tenantId"]?.Errors.Count > 0 ? "is-invalid" : "")" id="tenantSelect" name="tenantId" required>
                                        <option value="">-- Selecciona un tenant --</option>
                                        @foreach (var tenant in tenants)
                                        {
                                            var isSelected = selectedTenantId.HasValue && selectedTenantId.Value == tenant.Id;
                                            <option value="@tenant.Id" selected="@isSelected">@tenant.Name (@tenant.Subdomain)</option>
                                        }
                                    </select>
                                    <span asp-validation-for="tenantId" class="text-danger"></span>
                                    @if (ViewData.ModelState["tenantId"]?.Errors.Count > 0)
                                    {
                                        <div class="invalid-feedback d-block">
                                            @ViewData.ModelState["tenantId"].Errors[0].ErrorMessage
                                        </div>
                                    }
                                </div>
                            }

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Name">Nombre de la Campaña <span class="text-danger">*</span></label>
                                        <input type="text" id="Name" name="Name" class="form-control" placeholder="Ej: Campaña Verano 2024" required />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Status">Estado</label>
                                        <select id="Status" name="Status" class="form-control">
                                            <option value="Draft">Draft</option>
                                            <option value="Active">Active</option>
                                            <option value="Paused">Paused</option>
                                            <option value="Archived">Archived</option>
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Description">Descripción</label>
                                <textarea id="Description" name="Description" class="form-control" rows="3" placeholder="Descripción de la campaña..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="StartDate">Fecha de Inicio</label>
                                        <input type="date" id="StartDate" name="StartDate" class="form-control" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="EndDate">Fecha de Fin</label>
                                        <input type="date" id="EndDate" name="EndDate" class="form-control" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="Budget">Presupuesto</label>
                                        <input type="number" id="Budget" name="Budget" step="0.01" class="form-control" placeholder="0.00" />
                                        <span asp-validation-for="Budget" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Objetivos de la Campaña</label>
                                <div class="border p-3 rounded bg-light">
                                    <div class="form-group mb-2">
                                        <label class="small">Objetivo 1</label>
                                        <input type="text" name="Objectives[goals][0]" id="Objectives_goals_0" class="form-control form-control-sm" placeholder="Ej: Aumentar engagement" value="" />
                                    </div>
                                    <div class="form-group mb-2">
                                        <label class="small">Objetivo 2</label>
                                        <input type="text" name="Objectives[goals][1]" id="Objectives_goals_1" class="form-control form-control-sm" placeholder="Ej: Generar leads" value="" />
                                    </div>
                                    <div class="form-group mb-0">
                                        <label class="small">Objetivo 3</label>
                                        <input type="text" name="Objectives[goals][2]" id="Objectives_goals_2" class="form-control form-control-sm" placeholder="Ej: Mejorar brand awareness" value="" />
                                    </div>
                                </div>
                                <small class="form-text text-muted">Define los objetivos principales de la campaña.</small>
                            </div>

                            <div class="form-group">
                                <label>Audiencia Objetivo</label>
                                <div class="border p-3 rounded bg-light">
                                    <div class="form-group mb-2">
                                        <label class="small">Rango de Edad</label>
                                        <input type="text" name="TargetAudience[ageRange]" id="TargetAudience_ageRange" class="form-control form-control-sm" placeholder="Ej: 18-35" value="" />
                                    </div>
                                    <div class="form-group mb-2">
                                        <label class="small">Interés 1</label>
                                        <input type="text" name="TargetAudience[interests][0]" id="TargetAudience_interests_0" class="form-control form-control-sm" placeholder="Ej: tecnología" value="" />
                                    </div>
                                    <div class="form-group mb-0">
                                        <label class="small">Interés 2</label>
                                        <input type="text" name="TargetAudience[interests][1]" id="TargetAudience_interests_1" class="form-control form-control-sm" placeholder="Ej: marketing" value="" />
                                    </div>
                                </div>
                                <small class="form-text text-muted">Define las características de tu audiencia objetivo.</small>
                            </div>

                            <div class="form-group">
                                <label for="TargetChannels">Canales Objetivo</label>
                                <select id="TargetChannels" name="TargetChannels" multiple class="form-control">
                                    <option value="instagram">Instagram</option>
                                    <option value="facebook">Facebook</option>
                                    <option value="tiktok">TikTok</option>
                                    <option value="twitter">Twitter</option>
                                    <option value="linkedin">LinkedIn</option>
                                </select>
                                <small class="form-text text-muted">Mantén presionado Ctrl (o Cmd en Mac) para seleccionar múltiples canales.</small>
                            </div>

                            <div class="form-group">
                                <label for="Notes">Notas Internas</label>
                                <textarea id="Notes" name="Notes" class="form-control" rows="4" placeholder="Notas adicionales sobre la campaña..."></textarea>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-1"></i>Crear Campaña
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times mr-1"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            var form = document.getElementById('createCampaignForm');
            
            form.addEventListener('submit', function(e) {
                // Validación básica frontend
                var nameInput = document.getElementById('Name');
                if (!nameInput.value || nameInput.value.trim() === '') {
                    e.preventDefault();
                    alert('El nombre de la campaña es obligatorio.');
                    nameInput.focus();
                    return false;
                }
                
                @if (isSuperAdmin)
                {
                    <text>
                    // Validar tenant para SuperAdmin
                    var tenantSelect = document.getElementById('tenantSelect');
                    if (!tenantSelect.value || tenantSelect.value === '') {
                        e.preventDefault();
                        alert('Por favor, selecciona un tenant para crear la campaña.');
                        tenantSelect.focus();
                        return false;
                    }
                    </text>
                }
                
                // El formulario se enviará normalmente usando Model Binding estándar
                // NO modificar los datos, NO construir objetos JSON
                // ASP.NET Core hará el binding automáticamente
                return true;
            });
        });
    </script>
}

