@{
    ViewData["Title"] = "Campaigns";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-dark fw-bold mb-1"><i class="fas fa-bullhorn me-2 text-primary"></i>Campaigns</h2>
        <p class="text-muted">Manage your marketing campaigns.</p>
    </div>
</div>

<!-- Actions Bar -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="position-relative" style="width: 300px;">
        <i class="fas fa-search position-absolute text-muted" style="left: 10px; top: 10px;"></i>
        <input type="text" id="campaignSearch" class="form-control ps-5" placeholder="Search campaigns...">
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-warning fw-bold text-white shadow-sm" data-bs-toggle="modal" data-bs-target="#campaignModal" onclick="resetCampaignModal()"><i class="fas fa-plus me-1"></i> Add Campaign</button>
    </div>
</div>

<!-- Campaigns Table -->
<div class="card overflow-hidden border-0 shadow-sm">
    <table class="table table-custom mb-0" id="campaignsTable">
        <thead>
            <tr>
                <th class="ps-4">Name</th>
                <th>Subject</th>
                <th>Scheduled Date</th>
                <th>Status</th>
                <th class="text-end pe-4">Actions</th>
            </tr>
        </thead>
        <tbody id="campaignsTableBody">
            <!-- Data will be loaded via jQuery -->
        </tbody>
    </table>
     <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center p-3 border-top bg-light">
         <div class="text-muted small">Showing <span id="startRange">0</span> to <span id="endRange">0</span> of <span id="totalRecords">0</span> results</div>
         <nav>
             <ul class="pagination pagination-sm mb-0" id="pagination">
                 <!-- Pagination links -->
             </ul>
         </nav>
    </div>
</div>


<!-- Add/Edit Campaign Modal -->
<div class="modal fade" id="campaignModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light border-bottom">
                 <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-2 rounded me-3 text-primary">
                        <i class="fas fa-bullhorn fa-lg"></i>
                    </div>
                    <div>
                        <h5 class="modal-title fw-bold text-dark" id="campaignModalTitle">Add Campaign</h5>
                        <small class="text-muted">Create a new marketing campaign.</small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="campaignForm">
                    <input type="hidden" id="campaignId">
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-warning ps-2">Name *</label>
                        <input type="text" class="form-control" id="campaignName" placeholder="Enter campaign name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-info ps-2">Subject *</label>
                        <input type="text" class="form-control" id="campaignSubject" placeholder="Enter campaign subject" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-success ps-2">HTML Content *</label>
                        <textarea class="form-control" id="campaignHtmlContent" rows="5" placeholder="Enter HTML content" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-primary ps-2">Scheduled Date *</label>
                        <input type="datetime-local" class="form-control" id="campaignScheduledDate" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-secondary ps-2">Status</label>
                        <select class="form-select" id="campaignStatus">
                            <option value="0">Draft</option>
                            <option value="1">Scheduled</option>
                            <option value="2">Sent</option>
                            <option value="3">Failed</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top bg-light">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Clear</button>
                <button type="button" class="btn btn-primary shadow-sm" onclick="saveCampaign()"><i class="fas fa-plus me-1"></i> <span id="saveBtnText">Add Campaign</span></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/campaigns.js"></script>
}
