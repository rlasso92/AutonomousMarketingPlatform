@model AutonomousMarketingPlatform.Application.DTOs.DashboardDto
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
            <div class="col-sm-6 text-right">
                <div class="system-status-badge">
                    <span class="badge badge-@(Model.SystemStatus.IsActive ? "success" : "warning") badge-lg pulse-badge">
                        <i class="fas fa-circle"></i> @Model.SystemStatus.Status
                    </span>
                    @if (Model.SystemStatus.IsActive)
                    {
                        <small class="text-muted d-block mt-1">
                            <i class="fas fa-sync-alt fa-spin"></i> Actualizando en tiempo real
                        </small>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Estado del Sistema - Card Principal -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-server mr-2"></i>Estado del Sistema
                        </h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="refresh" data-source="/Home/GetSystemStatus">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 col-sm-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-@(Model.SystemStatus.IsActive ? "success" : "warning")">
                                        <i class="fas fa-power-off"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Estado</span>
                                        <span class="info-box-number">@Model.SystemStatus.Status</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info">
                                        <i class="fas fa-users"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Usuarios Activos</span>
                                        <span class="info-box-number">@Model.SystemStatus.ActiveUsers</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-primary">
                                        <i class="fas fa-clock"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Última Actividad</span>
                                        <span class="info-box-number" style="font-size: 0.9rem;">
                                            @Model.SystemStatus.LastActivity.ToString("HH:mm")
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-success">
                                        <i class="fas fa-check-circle"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Sistema</span>
                                        <span class="info-box-number">Operativo</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="alert alert-info mb-0 mt-3">
                            <i class="fas fa-info-circle mr-2"></i>
                            @Model.SystemStatus.StatusMessage
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Métricas Principales -->
        <div class="row">
            <!-- Campañas -->
            <div class="col-lg-3 col-6">
                <div class="small-box bg-gradient-primary">
                    <div class="inner">
                        <h3>@Model.Metrics.TotalCampaigns</h3>
                        <p>Total Campañas</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-bullhorn"></i>
                    </div>
                    <a href="/Campaigns" class="small-box-footer">
                        Ver todas <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <!-- Campañas Activas -->
            <div class="col-lg-3 col-6">
                <div class="small-box bg-gradient-success">
                    <div class="inner">
                        <h3>@Model.Metrics.ActiveCampaigns</h3>
                        <p>Campañas Activas</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-play-circle"></i>
                    </div>
                    <a href="/Campaigns?status=Active" class="small-box-footer">
                        Ver activas <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <!-- Contenido Generado -->
            <div class="col-lg-3 col-6">
                <div class="small-box bg-gradient-info">
                    <div class="inner">
                        <h3>@Model.Metrics.TotalContentGenerated</h3>
                        <p>Contenido Generado (IA)</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-magic"></i>
                    </div>
                    <a href="/Content" class="small-box-footer">
                        Ver contenido <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <!-- Automatizaciones Activas -->
            <div class="col-lg-3 col-6">
                <div class="small-box bg-gradient-warning">
                    <div class="inner">
                        <h3>@Model.AutomationStatus.RunningCount</h3>
                        <p>Automatizaciones Activas</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-robot"></i>
                    </div>
                    <a href="/Automations" class="small-box-footer">
                        Ver estado <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Fila Principal: Automatizaciones y Contenido -->
        <div class="row">
            <!-- Estado de Automatizaciones -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header border-transparent">
                        <h3 class="card-title">
                            <i class="fas fa-robot mr-2"></i>Automatizaciones 24/7
                        </h3>
                        <div class="card-tools">
                            <span class="badge badge-@(Model.AutomationStatus.RunningCount > 0 ? "success" : "secondary")">
                                @Model.AutomationStatus.RunningCount ejecutándose
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                    <tr>
                                        <th>Tipo</th>
                                        <th>Estado</th>
                                        <th>Próxima Ejecución</th>
                                        <th>Rendimiento</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.AutomationStatus.ActiveAutomations.Any())
                                    {
                                        @foreach (var automation in Model.AutomationStatus.ActiveAutomations)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@GetAutomationTypeName(automation.AutomationType)</strong>
                                                </td>
                                                <td>
                                                    <span class="badge badge-@GetStatusBadgeClass(automation.Status)">
                                                        @automation.Status
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (automation.NextExecutionAt.HasValue)
                                                    {
                                                        <small>@automation.NextExecutionAt.Value.ToString("dd/MM HH:mm")</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">-</small>
                                                    }
                                                </td>
                                                <td>
                                                    @if (automation.SuccessCount + automation.FailureCount > 0)
                                                    {
                                                        var successRate = (automation.SuccessCount * 100.0) / (automation.SuccessCount + automation.FailureCount);
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-success" style="width: @successRate%"></div>
                                                        </div>
                                                        <small>@successRate.ToString("F0")%</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">Sin datos</small>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-muted py-4">
                                                <i class="fas fa-info-circle"></i> No hay automatizaciones activas
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer clearfix">
                        <a href="/Automations" class="btn btn-sm btn-primary float-right">
                            <i class="fas fa-cog"></i> Gestionar Automatizaciones
                        </a>
                        @if (Model.AutomationStatus.NextExecution.HasValue)
                        {
                            <div class="next-execution-indicator">
                                <small class="text-muted">
                                    <i class="fas fa-clock text-primary"></i> 
                                    <strong>Próxima ejecución:</strong> 
                                    <span class="text-primary">@Model.AutomationStatus.NextExecution.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                </small>
                            </div>
                        }
                        @if (Model.AutomationStatus.RunningCount > 0)
                        {
                            <div class="mt-2">
                                <small class="text-success">
                                    <i class="fas fa-check-circle"></i> 
                                    <strong>@Model.AutomationStatus.RunningCount</strong> automatizaciones trabajando ahora
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Contenido Reciente -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header border-transparent">
                        <h3 class="card-title">
                            <i class="fas fa-images mr-2"></i>Contenido Reciente
                        </h3>
                        <div class="card-tools">
                            <span class="badge badge-info">@Model.ContentSummary.TotalFiles archivos</span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                    <tr>
                                        <th>Archivo</th>
                                        <th>Tipo</th>
                                        <th>Origen</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ContentSummary.RecentContent.Any())
                                    {
                                        @foreach (var content in Model.ContentSummary.RecentContent)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@content.FileName</strong>
                                                </td>
                                                <td>
                                                    <span class="badge badge-@(content.ContentType == "Image" ? "info" : "primary")">
                                                        @content.ContentType
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (content.IsAiGenerated)
                                                    {
                                                        <span class="badge badge-success">
                                                            <i class="fas fa-magic"></i> IA
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">
                                                            <i class="fas fa-upload"></i> Usuario
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <small>@content.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-muted py-4">
                                                <i class="fas fa-info-circle"></i> No hay contenido cargado
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer clearfix">
                        <a href="/Content/Upload" class="btn btn-sm btn-primary float-right">
                            <i class="fas fa-upload"></i> Cargar Contenido
                        </a>
                        <div class="text-muted small">
                            <i class="fas fa-chart-pie"></i> 
                            @Model.ContentSummary.ImagesCount imágenes | 
                            @Model.ContentSummary.VideosCount videos
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Campañas Recientes y Métricas -->
        <div class="row">
            <!-- Campañas Recientes -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header border-transparent">
                        <h3 class="card-title">
                            <i class="fas fa-bullhorn mr-2"></i>Campañas Recientes
                        </h3>
                        <div class="card-tools">
                            <a href="/Campaigns" class="btn btn-sm btn-link">Ver todas</a>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.RecentCampaigns.Any())
                        {
                            <div class="table-responsive">
                                <table class="table m-0">
                                    <thead>
                                        <tr>
                                            <th>Campaña</th>
                                            <th>Estado</th>
                                            <th>Presupuesto</th>
                                            <th>Contenido</th>
                                            <th>Fecha</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var campaign in Model.RecentCampaigns)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@campaign.Name</strong>
                                                </td>
                                                <td>
                                                    <span class="badge badge-@GetCampaignStatusBadgeClass(campaign.Status)">
                                                        @campaign.Status
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (campaign.Budget.HasValue)
                                                    {
                                                        <span>@campaign.Budget.Value.ToString("C")</span>
                                                        @if (campaign.SpentAmount.HasValue)
                                                        {
                                                            <br><small class="text-muted">Gastado: @campaign.SpentAmount.Value.ToString("C")</small>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge badge-info">@campaign.ContentCount</span>
                                                </td>
                                                <td>
                                                    <small>@campaign.CreatedAt.ToString("dd/MM/yyyy")</small>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-info-circle"></i> No hay campañas creadas
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <a href="/Campaigns" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus"></i> Nueva Campaña
                        </a>
                    </div>
                </div>
            </div>

            <!-- Métricas Rápidas -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-line mr-2"></i>Métricas Rápidas
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Presupuesto Total</span>
                                <strong>@Model.Metrics.TotalBudget.ToString("C")</strong>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-primary" style="width: 100%"></div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Gastado</span>
                                <strong>@Model.Metrics.TotalSpent.ToString("C")</strong>
                            </div>
                            <div class="progress" style="height: 8px;">
                                @{
                                    var spentPercentage = Model.Metrics.TotalBudget > 0 
                                        ? (Model.Metrics.TotalSpent / Model.Metrics.TotalBudget * 100) 
                                        : 0;
                                }
                                <div class="progress-bar bg-@(spentPercentage > 80 ? "danger" : spentPercentage > 50 ? "warning" : "success")" 
                                     style="width: @Math.Min(spentPercentage, 100)%"></div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Rendimiento Promedio</span>
                                <strong>@Model.Metrics.AverageCampaignPerformance.ToString("F1")%</strong>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-success" style="width: @Model.Metrics.AverageCampaignPerformance%"></div>
                            </div>
                        </div>

                        <hr>

                        <div class="row text-center">
                            <div class="col-6">
                                <div class="description-block border-right">
                                    <h5 class="description-header">@Model.ContentSummary.TotalFiles</h5>
                                    <span class="description-text">Archivos</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="description-block">
                                    <h5 class="description-header">@Model.AutomationStatus.TotalAutomations</h5>
                                    <span class="description-text">Automatizaciones</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Indicador de Trabajo Autónomo -->
                <div class="card card-success automation-indicator">
                    <div class="card-header bg-success text-white">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-cog fa-spin mr-2"></i>Sistema Autónomo Activo
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <div class="automation-icon mb-3">
                                <i class="fas fa-robot"></i>
                            </div>
                            <h4 class="mb-3 font-weight-bold">
                                El sistema está trabajando solo
                            </h4>
                            <div class="automation-stats mb-3">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="stat-item">
                                            <div class="stat-number">@Model.AutomationStatus.RunningCount</div>
                                            <div class="stat-label">Ejecutándose</div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="stat-item">
                                            <div class="stat-number">@Model.AutomationStatus.TotalAutomations</div>
                                            <div class="stat-label">Total</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="automation-message">
                                <p class="mb-2">
                                    <i class="fas fa-check-circle text-success mr-1"></i>
                                    Procesando contenido automáticamente
                                </p>
                                <p class="mb-2">
                                    <i class="fas fa-check-circle text-success mr-1"></i>
                                    Generando campañas con IA
                                </p>
                                <p class="mb-0">
                                    <i class="fas fa-check-circle text-success mr-1"></i>
                                    Operativo 24/7 sin intervención
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@functions {
    string GetAutomationTypeName(string type)
    {
        return type switch
        {
            "ContentGeneration" => "Generación de Contenido",
            "Publishing" => "Publicación",
            "Analytics" => "Análisis",
            "StrategyUpdate" => "Actualización de Estrategia",
            _ => type
        };
    }

    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Running" => "success",
            "Paused" => "warning",
            "Completed" => "info",
            "Error" => "danger",
            "Scheduled" => "primary",
            _ => "secondary"
        };
    }

    string GetCampaignStatusBadgeClass(string status)
    {
        return status switch
        {
            "Active" => "success",
            "Paused" => "warning",
            "Draft" => "secondary",
            "Completed" => "info",
            "Archived" => "dark",
            _ => "secondary"
        };
    }
}

@section Scripts {
<script>
    // Auto-refresh cada 30 segundos
    setInterval(function() {
        // Solo refrescar si la pestaña está activa
        if (!document.hidden) {
            location.reload();
        }
    }, 30000);
</script>
}
