@{
    ViewData["Title"] = "Marketing Memory";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-dark fw-bold mb-1"><i class="fas fa-brain me-2 text-primary"></i>Marketing Memory</h2>
        <p class="text-muted">Manage the AI's knowledge base and memory.</p>
    </div>
</div>

<!-- Actions Bar -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="position-relative" style="width: 300px;">
        <i class="fas fa-search position-absolute text-muted" style="left: 10px; top: 10px;"></i>
        <input type="text" id="memorySearch" class="form-control ps-5" placeholder="Search memories...">
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-warning fw-bold text-white shadow-sm" data-bs-toggle="modal" data-bs-target="#memoryModal" onclick="resetMemoryModal()"><i class="fas fa-plus me-1"></i> Add Memory</button>
    </div>
</div>

<!-- Memories Table -->
<div class="card overflow-hidden border-0 shadow-sm">
    <table class="table table-custom mb-0" id="memoriesTable">
        <thead>
            <tr>
                <th class="ps-4">Key</th>
                <th>Value</th>
                <th>Last Accessed</th>
                <th class="text-end pe-4">Actions</th>
            </tr>
        </thead>
        <tbody id="memoriesTableBody">
            <!-- Data will be loaded via jQuery -->
        </tbody>
    </table>
     <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center p-3 border-top bg-light">
         <div class="text-muted small">Showing <span id="startRange">0</span> to <span id="endRange">0</span> of <span id="totalRecords">0</span> results</div>
         <nav>
             <ul class="pagination pagination-sm mb-0" id="pagination">
                 <!-- Pagination links -->
             </ul>
         </nav>
    </div>
</div>


<!-- Add/Edit Memory Modal -->
<div class="modal fade" id="memoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light border-bottom">
                 <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-2 rounded me-3 text-primary">
                        <i class="fas fa-brain fa-lg"></i>
                    </div>
                    <div>
                        <h5 class="modal-title fw-bold text-dark" id="memoryModalTitle">Add Memory</h5>
                        <small class="text-muted">Add a new key-value pair to the AI's memory.</small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="memoryForm">
                    <input type="hidden" id="memoryId">
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-warning ps-2">Key *</label>
                        <input type="text" class="form-control" id="memoryKey" placeholder="Enter unique key" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-info ps-2">Value *</label>
                        <textarea class="form-control" id="memoryValue" rows="4" placeholder="Enter value" required></textarea>
                    </div>
                     <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-secondary ps-2">Notes</label>
                        <textarea class="form-control" id="memoryNotes" rows="2" placeholder="Optional notes about this memory"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top bg-light">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Clear</button>
                <button type="button" class="btn btn-primary shadow-sm" onclick="saveMemory()"><i class="fas fa-plus me-1"></i> <span id="saveBtnText">Add Memory</span></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/marketing-memories.js"></script>
}
