@{
    ViewData["Title"] = "Consents";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-dark fw-bold mb-1"><i class="fas fa-check-circle me-2 text-primary"></i>Consents</h2>
        <p class="text-muted">Manage user consent for communications.</p>
    </div>
</div>

<!-- Actions Bar -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="position-relative" style="width: 300px;">
        <i class="fas fa-search position-absolute text-muted" style="left: 10px; top: 10px;"></i>
        <input type="text" id="consentSearch" class="form-control ps-5" placeholder="Search by contact email...">
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-warning fw-bold text-white shadow-sm" data-bs-toggle="modal" data-bs-target="#consentModal" onclick="resetConsentModal()"><i class="fas fa-plus me-1"></i> Add Consent</button>
    </div>
</div>

<!-- Consents Table -->
<div class="card overflow-hidden border-0 shadow-sm">
    <table class="table table-custom mb-0" id="consentsTable">
        <thead>
            <tr>
                <th class="ps-4">Contact Email</th>
                <th>Consent Type</th>
                <th>Status</th>
                <th>Granted At</th>
                <th class="text-end pe-4">Actions</th>
            </tr>
        </thead>
        <tbody id="consentsTableBody">
            <!-- Data will be loaded via jQuery -->
        </tbody>
    </table>
     <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center p-3 border-top bg-light">
         <div class="text-muted small">Showing <span id="startRange">0</span> to <span id="endRange">0</span> of <span id="totalRecords">0</span> results</div>
         <nav>
             <ul class="pagination pagination-sm mb-0" id="pagination">
                 <!-- Pagination links -->
             </ul>
         </nav>
    </div>
</div>


<!-- Add/Edit Consent Modal -->
<div class="modal fade" id="consentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light border-bottom">
                 <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-2 rounded me-3 text-primary">
                        <i class="fas fa-check-circle fa-lg"></i>
                    </div>
                    <div>
                        <h5 class="modal-title fw-bold text-dark" id="consentModalTitle">Add Consent</h5>
                        <small class="text-muted">Manually record a user's consent.</small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="consentForm">
                    <input type="hidden" id="consentId">
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-warning ps-2">Contact ID *</label>
                        <input type="text" class="form-control" id="contactId" placeholder="Enter Contact GUID" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-dark small fw-bold border-start border-3 border-primary ps-2">Consent Type</label>
                            <select class="form-select" id="consentType">
                                <option value="0">Email Newsletter</option>
                                <option value="1">SMS Alerts</option>
                                <option value="2">Third Party Marketing</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-dark small fw-bold border-start border-3 border-secondary ps-2">Status</label>
                            <select class="form-select" id="consentStatus">
                                <option value="0">Granted</option>
                                <option value="1">Revoked</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top bg-light">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Clear</button>
                <button type="button" class="btn btn-primary shadow-sm" onclick="saveConsent()"><i class="fas fa-plus me-1"></i> <span id="saveBtnText">Add Consent</span></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/consents.js"></script>
}
