@model AutonomousMarketingPlatform.Application.DTOs.UserConsentsDto
@{
    ViewData["Title"] = "Consentimientos y Autorizaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (!Model.AllRequiredConsentsGranted)
        {
            <div class="alert alert-warning">
                <h5><i class="icon fas fa-exclamation-triangle"></i> Consentimientos Requeridos Pendientes</h5>
                <p>Debe otorgar los siguientes consentimientos requeridos para usar todas las funcionalidades del sistema:</p>
                <ul>
                    @foreach (var missing in Model.MissingRequiredConsents)
                    {
                        <li>@missing</li>
                    }
                </ul>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Gestión de Consentimientos</h3>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    Para utilizar las funcionalidades de marketing autónomo con IA, es necesario otorgar su consentimiento explícito.
                    Puede revisar y gestionar sus consentimientos en cualquier momento.
                </p>

                <div class="row">
                    @foreach (var consent in Model.Consents)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card @(consent.IsRequired ? "border-warning" : "")">
                                <div class="card-header @(consent.IsRequired ? "bg-warning" : "bg-light")">
                                    <h5 class="card-title mb-0">
                                        @consent.ConsentTypeDisplayName
                                        @if (consent.IsRequired)
                                        {
                                            <span class="badge badge-danger ml-2">Requerido</span>
                                        }
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(consent.Description))
                                    {
                                        <p class="card-text">@consent.Description</p>
                                    }

                                    @if (consent.IsGranted)
                                    {
                                        <div class="alert alert-success mb-3">
                                            <i class="fas fa-check-circle"></i> 
                                            <strong>Otorgado</strong>
                                            @if (consent.GrantedAt.HasValue)
                                            {
                                                <br><small>Fecha: @consent.GrantedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                            }
                                            @if (!string.IsNullOrEmpty(consent.ConsentVersion))
                                            {
                                                <br><small>Versión: @consent.ConsentVersion</small>
                                            }
                                        </div>

                                        @if (consent.CanRevoke)
                                        {
                                            <form asp-action="Revoke" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="consentType" value="@consent.ConsentType" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('¿Está seguro de que desea revocar este consentimiento?');">
                                                    <i class="fas fa-times"></i> Revocar
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <p class="text-muted small">Este consentimiento es requerido y no puede ser revocado.</p>
                                        }
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning mb-3">
                                            <i class="fas fa-exclamation-circle"></i> 
                                            <strong>No otorgado</strong>
                                        </div>

                                        <form asp-action="Grant" asp-controller="Consents" method="post" class="d-inline" id="grantForm_@consent.ConsentType">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="ConsentType" value="@consent.ConsentType" />
                                            <input type="hidden" name="ConsentVersion" value="1.0" />
                                            <button type="submit" class="btn btn-sm btn-primary" id="grantBtn_@consent.ConsentType">
                                                <i class="fas fa-check"></i> Otorgar Consentimiento
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h3 class="card-title">Información Legal</h3>
            </div>
            <div class="card-body">
                <h5>¿Por qué necesitamos su consentimiento?</h5>
                <p>
                    Para proporcionar servicios de marketing autónomo con inteligencia artificial, necesitamos su consentimiento explícito 
                    para procesar datos y generar contenido. Esto es requerido por normativas de protección de datos (GDPR, etc.).
                </p>

                <h5>¿Qué significa cada consentimiento?</h5>
                <ul>
                    <li><strong>Generación de Contenido con IA:</strong> Permite al sistema crear contenido publicitario usando inteligencia artificial.</li>
                    <li><strong>Procesamiento de Datos:</strong> Permite analizar y procesar datos para mejorar las campañas de marketing.</li>
                    <li><strong>Publicación Automática:</strong> Permite publicar contenido automáticamente en redes sociales (opcional).</li>
                    <li><strong>Análisis y Métricas:</strong> Permite recopilar métricas de rendimiento (opcional).</li>
                </ul>

                <h5>Sus derechos</h5>
                <p>
                    Puede revocar sus consentimientos en cualquier momento (excepto los requeridos para el funcionamiento básico del sistema).
                    Al revocar un consentimiento, las funcionalidades relacionadas dejarán de estar disponibles.
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Manejar envío de formularios de consentimiento
            $('form[id^="grantForm_"]').on('submit', function(e) {
                var $form = $(this);
                var $btn = $form.find('button[type="submit"]');
                var originalText = $btn.html();
                
                // Deshabilitar botón y mostrar loading
                $btn.prop('disabled', true);
                $btn.html('<i class="fas fa-spinner fa-spin"></i> Procesando...');
                
                // Si hay error, restaurar botón después de 3 segundos
                setTimeout(function() {
                    if ($btn.prop('disabled')) {
                        $btn.prop('disabled', false);
                        $btn.html(originalText);
                    }
                }, 10000);
            });
            
            // Log para debugging
            console.log('Consents page loaded');
        });
    </script>
}

