@model AutonomousMarketingPlatform.Application.DTOs.UpdateUserDto
@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = ViewBag.UserId as Guid? ?? Guid.Empty;
    var email = ViewBag.Email as string ?? "";
    var tenantName = ViewBag.TenantName as string ?? "";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-user-edit mr-2"></i>Editar Usuario</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Usuarios</a></li>
                        <li class="breadcrumb-item active">Editar</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Información del Usuario</h3>
                        </div>
                        <form asp-action="Edit" asp-controller="Users" method="post" asp-antiforgery="@(!Context.RequestServices.GetRequiredService<IWebHostEnvironment>().IsDevelopment())">
                            <input type="hidden" name="id" value="@userId" />
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" class="form-control" value="@email" disabled />
                                    <small class="form-text text-muted">El email no se puede modificar</small>
                                </div>

                                <div class="form-group">
                                    <label>Tenant</label>
                                    <input type="text" class="form-control" value="@tenantName" disabled />
                                    <small class="form-text text-muted">El tenant no se puede modificar</small>
                                </div>

                                <div class="form-group">
                                    <label asp-for="FullName">Nombre Completo <span class="text-danger">*</span></label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Role">Rol <span class="text-danger">*</span></label>
                                    <select asp-for="Role" class="form-control">
                                        @{
                                            var roles = new[] { "Marketer", "Admin", "Owner", "Viewer" };
                                            var currentRole = Model?.Role ?? "";
                                        }
                                        @foreach (var role in roles)
                                        {
                                            if (currentRole == role)
                                            {
                                                <option value="@role" selected>@role</option>
                                            }
                                            else
                                            {
                                                <option value="@role">@role</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        <input type="hidden" name="IsActive" value="false" />
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" value="true" />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Usuario Activo
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save mr-1"></i>Guardar Cambios
                                </button>
                                <a href="@Url.Action("Details", new { id = userId })" class="btn btn-secondary">
                                    <i class="fas fa-times mr-1"></i>Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Información</h3>
                        </div>
                        <div class="card-body">
                            <h5>Roles Disponibles:</h5>
                            <ul>
                                <li><strong>Owner:</strong> Dueño del tenant, acceso total</li>
                                <li><strong>Admin:</strong> Administrador del tenant</li>
                                <li><strong>Marketer:</strong> Puede crear/editar campañas</li>
                                <li><strong>Viewer:</strong> Solo lectura</li>
                            </ul>
                            <hr>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle mr-1"></i>
                                <strong>Nota:</strong> El email y el tenant no se pueden modificar después de crear el usuario.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

