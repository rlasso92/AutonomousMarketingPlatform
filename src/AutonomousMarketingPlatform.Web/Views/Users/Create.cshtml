@model AutonomousMarketingPlatform.Application.DTOs.CreateUserDto
@using AutonomousMarketingPlatform.Application.DTOs
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isSuperAdmin = User.HasClaim("IsSuperAdmin", "true");
    var tenants = ViewBag.Tenants as List<TenantDto> ?? new List<TenantDto>();
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-user-plus mr-2"></i>Crear Usuario</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Usuarios</a></li>
                        <li class="breadcrumb-item active">Crear</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Información del Usuario</h3>
                        </div>
                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()
                            <div class="card-body">
                                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                                <div class="form-group">
                                    <label asp-for="Email">Email <span class="text-danger">*</span></label>
                                    <input asp-for="Email" class="form-control" type="email" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Password">Contraseña <span class="text-danger">*</span></label>
                                    <input asp-for="Password" class="form-control" type="password" required 
                                           minlength="8" id="passwordInput" />
                                    <small class="form-text text-muted">
                                        Mínimo 8 caracteres, debe incluir mayúsculas, minúsculas, números y caracteres especiales
                                    </small>
                                    <div id="passwordStrength" class="mt-2" style="display: none;">
                                        <div class="progress" style="height: 5px;">
                                            <div id="passwordStrengthBar" class="progress-bar" role="progressbar" style="width: 0%"></div>
                                        </div>
                                        <small id="passwordStrengthText" class="text-muted"></small>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="FullName">Nombre Completo <span class="text-danger">*</span></label>
                                    <input asp-for="FullName" class="form-control" required />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                @if (isSuperAdmin)
                                {
                                    <div class="form-group">
                                        <label asp-for="TenantId">Tenant <span class="text-danger">*</span></label>
                                        <select asp-for="TenantId" class="form-control" required>
                                            <option value="">-- Seleccione un Tenant --</option>
                                            @foreach (var tenant in tenants)
                                            {
                                                <option value="@tenant.Id">@tenant.Name @(tenant.Subdomain != null ? $"({tenant.Subdomain})" : "")</option>
                                            }
                                        </select>
                                        <span asp-validation-for="TenantId" class="text-danger"></span>
                                    </div>
                                }
                                else
                                {
                                    <input type="hidden" asp-for="TenantId" />
                                }

                                <div class="form-group">
                                    <label asp-for="Role">Rol <span class="text-danger">*</span></label>
                                    <select asp-for="Role" class="form-control" required>
                                        <option value="Marketer">Marketer</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Owner">Owner</option>
                                        <option value="Viewer">Viewer</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Usuario Activo
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save mr-1"></i>Crear Usuario
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-times mr-1"></i>Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Información</h3>
                        </div>
                        <div class="card-body">
                            <h5>Roles Disponibles:</h5>
                            <ul>
                                <li><strong>Owner:</strong> Dueño del tenant, acceso total</li>
                                <li><strong>Admin:</strong> Administrador del tenant</li>
                                <li><strong>Marketer:</strong> Puede crear/editar campañas</li>
                                <li><strong>Viewer:</strong> Solo lectura</li>
                            </ul>
                            <hr>
                            <h5>Requisitos de Contraseña:</h5>
                            <ul>
                                <li>Mínimo 8 caracteres</li>
                                <li>Al menos una mayúscula</li>
                                <li>Al menos una minúscula</li>
                                <li>Al menos un número</li>
                                <li>Al menos un carácter especial</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Validación de contraseña en tiempo real
            $('#passwordInput').on('input', function() {
                var password = $(this).val();
                var strength = 0;
                var feedback = [];

                if (password.length >= 8) {
                    strength += 25;
                } else {
                    feedback.push('Mínimo 8 caracteres');
                }

                if (/[a-z]/.test(password)) {
                    strength += 25;
                } else {
                    feedback.push('Falta minúscula');
                }

                if (/[A-Z]/.test(password)) {
                    strength += 25;
                } else {
                    feedback.push('Falta mayúscula');
                }

                if (/\d/.test(password)) {
                    strength += 12.5;
                } else {
                    feedback.push('Falta número');
                }

                var specialChars = '@@$!%*?&';
                var hasSpecial = false;
                for (var i = 0; i < specialChars.length; i++) {
                    if (password.indexOf(specialChars[i]) !== -1) {
                        hasSpecial = true;
                        break;
                    }
                }
                if (hasSpecial) {
                    strength += 12.5;
                } else {
                    feedback.push('Falta carácter especial');
                }

                var $strengthDiv = $('#passwordStrength');
                var $strengthBar = $('#passwordStrengthBar');
                var $strengthText = $('#passwordStrengthText');

                if (password.length > 0) {
                    $strengthDiv.show();
                    $strengthBar.css('width', strength + '%');

                    if (strength < 50) {
                        $strengthBar.removeClass('progress-bar-success progress-bar-warning').addClass('progress-bar-danger');
                        $strengthText.text('Débil: ' + feedback.join(', ')).removeClass('text-success text-warning').addClass('text-danger');
                    } else if (strength < 75) {
                        $strengthBar.removeClass('progress-bar-danger progress-bar-success').addClass('progress-bar-warning');
                        $strengthText.text('Media: ' + feedback.join(', ')).removeClass('text-danger text-success').addClass('text-warning');
                    } else {
                        $strengthBar.removeClass('progress-bar-danger progress-bar-warning').addClass('progress-bar-success');
                        $strengthText.text('Fuerte').removeClass('text-danger text-warning').addClass('text-success');
                    }
                } else {
                    $strengthDiv.hide();
                }
            });

            // Validación antes de enviar
            $('form').on('submit', function(e) {
                var password = $('#passwordInput').val();
                var hasLower = /[a-z]/.test(password);
                var hasUpper = /[A-Z]/.test(password);
                var hasDigit = /\d/.test(password);
                var specialChars = '@@$!%*?&';
                var hasSpecial = false;
                for (var i = 0; i < specialChars.length; i++) {
                    if (password.indexOf(specialChars[i]) !== -1) {
                        hasSpecial = true;
                        break;
                    }
                }
                var hasMinLength = password.length >= 8;
                
                var isValid = hasLower && hasUpper && hasDigit && hasSpecial && hasMinLength;

                if (!isValid) {
                    e.preventDefault();
                    var errors = [];
                    if (!hasMinLength) errors.push('Mínimo 8 caracteres');
                    if (!hasUpper) errors.push('Al menos una mayúscula');
                    if (!hasLower) errors.push('Al menos una minúscula');
                    if (!hasDigit) errors.push('Al menos un número');
                    if (!hasSpecial) errors.push('Al menos un carácter especial (@@$!%*?&)');
                    
                    alert('La contraseña no cumple con los requisitos:\n' + errors.join('\n'));
                    return false;
                }
            });
        });
    </script>
}

