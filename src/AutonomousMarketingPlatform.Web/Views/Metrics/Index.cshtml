@model List<AutonomousMarketingPlatform.Application.DTOs.CampaignMetricsSummaryDto>
@{
    ViewData["Title"] = "Métricas";
    var fromDate = ViewBag.FromDate as DateTime?;
    var toDate = ViewBag.ToDate as DateTime?;
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-chart-line mr-2"></i>Métricas de Campañas</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Métricas</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <!-- Filtros de fecha -->
            <div class="card mb-3">
                <div class="card-body">
                    <form method="get" class="row">
                        <div class="col-md-4">
                            <label>Desde:</label>
                            <input type="date" name="fromDate" class="form-control" value="@(fromDate?.ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-md-4">
                            <label>Hasta:</label>
                            <input type="date" name="toDate" class="form-control" value="@(toDate?.ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-md-4">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-filter mr-1"></i>Filtrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="row">
                @foreach (var campaign in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h3 class="card-title">@campaign.CampaignName</h3>
                                <div class="card-tools">
                                    <a href="@Url.Action("Campaign", new { campaignId = campaign.CampaignId })" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Ver Detalles
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="description-block border-right">
                                            <span class="description-percentage text-success">
                                                <i class="fas fa-eye"></i>
                                            </span>
                                            <h5 class="description-header">@campaign.TotalImpressions.ToString("N0")</h5>
                                            <span class="description-text">IMPRESIONES</span>
                                        </div>
                                        <div class="col-6">
                                            <div class="description-block">
                                                <span class="description-percentage text-info">
                                                    <i class="fas fa-mouse-pointer"></i>
                                                </span>
                                                <h5 class="description-header">@campaign.TotalClicks.ToString("N0")</h5>
                                                <span class="description-text">CLICS</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-12">
                                            <div class="description-block">
                                                <span class="description-percentage text-warning">
                                                    <i class="fas fa-heart"></i>
                                                </span>
                                                <h5 class="description-header">@campaign.TotalEngagement.ToString("N0")</h5>
                                                <span class="description-text">ENGAGEMENT</span>
                                            </div>
                                        </div>
                                    </div>
                                    @if (campaign.AverageEngagementRate.HasValue)
                                    {
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                Engagement Rate: <strong>@campaign.AverageEngagementRate.Value.ToString("F2")%</strong>
                                            </small>
                                        </div>
                                    }
                                    <div class="mt-2">
                                        <small class="text-muted">
                                            Posts: <strong>@campaign.TotalPosts</strong> | 
                                            Días con métricas: <strong>@campaign.DaysWithMetrics</strong>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (!Model.Any())
                {
                    <div class="col-12">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle mr-2"></i>
                            No hay métricas registradas aún. 
                            <a href="@Url.Action("Index", "Campaigns")">Ver campañas</a> para comenzar a registrar métricas.
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar tooltips si es necesario
        });
    </script>
}

