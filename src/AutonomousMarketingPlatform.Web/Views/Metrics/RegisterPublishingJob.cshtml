@model AutonomousMarketingPlatform.Application.DTOs.RegisterPublishingJobMetricsDto
@{
    ViewData["Title"] = "Registrar Métricas de Publicación";
    var publishingJobId = ViewBag.PublishingJobId as Guid?;
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-plus-circle mr-2"></i>Registrar Métricas de Publicación</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Publishing")">Publicaciones</a></li>
                        <li class="breadcrumb-item active">Registrar Métricas</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Ingrese las métricas para la fecha seleccionada</h3>
                        </div>
                        <form asp-action="RegisterPublishingJob" method="post">
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <input type="hidden" asp-for="PublishingJobId" />

                                <div class="form-group">
                                    <label asp-for="MetricDate">Fecha de las Métricas</label>
                                    <input type="date" asp-for="MetricDate" class="form-control" required />
                                    <span asp-validation-for="MetricDate" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Impressions">Impresiones</label>
                                    <input type="number" asp-for="Impressions" class="form-control" min="0" required />
                                    <span asp-validation-for="Impressions" class="text-danger"></span>
                                    <small class="form-text text-muted">Número de veces que se mostró el post</small>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Clicks">Clics</label>
                                    <input type="number" asp-for="Clicks" class="form-control" min="0" required />
                                    <span asp-validation-for="Clicks" class="text-danger"></span>
                                    <small class="form-text text-muted">Número de clics en el post</small>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Likes">Likes</label>
                                            <input type="number" asp-for="Likes" class="form-control" min="0" required />
                                            <span asp-validation-for="Likes" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Comments">Comentarios</label>
                                            <input type="number" asp-for="Comments" class="form-control" min="0" required />
                                            <span asp-validation-for="Comments" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Shares">Compartidos</label>
                                            <input type="number" asp-for="Shares" class="form-control" min="0" required />
                                            <span asp-validation-for="Shares" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Source">Fuente</label>
                                    <select asp-for="Source" class="form-control">
                                        <option value="Manual">Manual</option>
                                        <option value="API">API</option>
                                        <option value="Facebook">Facebook API</option>
                                        <option value="Instagram">Instagram API</option>
                                        <option value="TikTok">TikTok API</option>
                                    </select>
                                    <span asp-validation-for="Source" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Notes">Notas (opcional)</label>
                                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save mr-1"></i>Guardar Métricas
                                </button>
                                <a href="@Url.Action("PublishingJob", new { publishingJobId = Model.PublishingJobId })" class="btn btn-secondary">
                                    <i class="fas fa-times mr-1"></i>Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

