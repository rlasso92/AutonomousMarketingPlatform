@{
    ViewData["Title"] = "Admin - Roles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-dark fw-bold mb-1"><i class="fas fa-user-shield me-2 text-primary"></i>Admin</h2>
        <p class="text-muted">Manage users, roles, offices, countries, and administrative expenses.</p>
    </div>
</div>

<!-- Tabs -->
<ul class="nav nav-tabs-custom mb-4">
    <li class="nav-item">
        <a class="nav-link" asp-controller="Users" asp-action="Index">Users</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-controller="Roles" asp-action="Index">Roles</a>
    </li>
</ul>

<!-- Actions Bar -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="position-relative" style="width: 300px;">
       <h4 class="text-dark fw-bold mb-0">Roles</h4>
    </div>
    <div class="d-flex gap-2">
         <button class="btn btn-warning fw-bold text-white shadow-sm" data-bs-toggle="modal" data-bs-target="#roleModal" onclick="resetRoleModal()"><i class="fas fa-plus me-1"></i> Add Role</button>
    </div>
</div>

<!-- Roles List -->
<div class="row" id="rolesList">
    <!-- Roles will be loaded here as cards or table rows -->
    <div class="col-12">
        <div class="card overflow-hidden border-0 shadow-sm">
             <table class="table table-custom mb-0" id="rolesTable">
                <thead>
                    <tr>
                        <th class="ps-4">Role Name</th>
                        <th>Description</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody id="rolesTableBody">
                    <!-- Data will be loaded via jQuery -->
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Add/Edit Role Modal -->
<div class="modal fade" id="roleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light border-bottom">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-2 rounded me-3 text-primary">
                        <i class="fas fa-user-tag fa-lg"></i>
                    </div>
                    <div>
                        <h5 class="modal-title fw-bold text-dark" id="roleModalTitle">Add Role</h5>
                        <small class="text-muted">Create a new role and assign permissions.</small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="roleForm">
                    <input type="hidden" id="roleId">
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-warning ps-2">Role Name *</label>
                        <input type="text" class="form-control" id="roleName" placeholder="Enter role name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-dark small fw-bold border-start border-3 border-info ps-2">Description</label>
                        <textarea class="form-control" id="roleDescription" rows="3" placeholder="Enter role description"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top bg-light">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Clear</button>
                <button type="button" class="btn btn-primary shadow-sm" onclick="saveRole()"><i class="fas fa-plus me-1"></i> <span id="saveRoleBtnText">Add Role</span></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/roles.js"></script>
}