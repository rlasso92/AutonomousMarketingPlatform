@model AutonomousMarketingPlatform.Application.DTOs.GeneratePublishingJobDto
@{
    ViewData["Title"] = "Generar Publicación";
    var campaignId = ViewBag.CampaignId as Guid?;
    var marketingPackId = ViewBag.MarketingPackId as Guid?;
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-plus mr-2"></i>Generar Publicación</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Publicaciones</a></li>
                        <li class="breadcrumb-item active">Generar</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Información de la Publicación</h3>
                        </div>
                        <form asp-action="Generate" method="post">
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CampaignId">ID de Campaña <span class="text-danger">*</span></label>
                                            <input asp-for="CampaignId" class="form-control" type="text" value="@(campaignId?.ToString() ?? Model.CampaignId.ToString())" />
                                            <span asp-validation-for="CampaignId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="MarketingPackId">ID de Marketing Pack <span class="text-danger">*</span></label>
                                            <input asp-for="MarketingPackId" class="form-control" type="text" value="@(marketingPackId?.ToString() ?? Model.MarketingPackId.ToString())" />
                                            <span asp-validation-for="MarketingPackId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Channel">Canal <span class="text-danger">*</span></label>
                                            <select asp-for="Channel" class="form-control">
                                                <option value="">Seleccione un canal</option>
                                                <option value="Instagram">Instagram</option>
                                                <option value="Facebook">Facebook</option>
                                                <option value="TikTok">TikTok</option>
                                            </select>
                                            <span asp-validation-for="Channel" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="ScheduledDate">Fecha Programada</label>
                                            <input asp-for="ScheduledDate" type="datetime-local" class="form-control" />
                                            <small class="form-text text-muted">Dejar vacío para procesar inmediatamente</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="RequiresApproval" class="form-check-input" type="checkbox" checked />
                                        <label asp-for="RequiresApproval" class="form-check-label">
                                            Requiere aprobación manual (Fase A)
                                        </label>
                                        <small class="form-text text-muted">
                                            Si está marcado, se generará un paquete listo para descargar y publicar manualmente.
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save mr-1"></i>Generar Publicación
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-times mr-1"></i>Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

