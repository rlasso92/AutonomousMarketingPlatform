@model AutonomousMarketingPlatform.Application.DTOs.PublishingJobDto
@{
    ViewData["Title"] = "Detalle de Publicación";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-paper-plane mr-2"></i>Publicación @Model.Id.ToString().Substring(0, 8)...</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Publicaciones</a></li>
                        <li class="breadcrumb-item active">Detalle</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <!-- Información Principal -->
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-info-circle mr-2"></i>Información General
                            </h3>
                            <div class="card-tools">
                                <a href="@Url.Action("PublishingJob", "Metrics", new { publishingJobId = Model.Id })" 
                                   class="btn btn-sm btn-primary mr-2" title="Ver Métricas">
                                    <i class="fas fa-chart-line mr-1"></i>Ver Métricas
                                </a>
                                @{
                                    var statusClass = Model.Status switch
                                    {
                                        "Success" => "badge-success",
                                        "Failed" => "badge-danger",
                                        "Processing" => "badge-warning",
                                        "RequiresApproval" => "badge-info",
                                        _ => "badge-secondary"
                                    };
                                }
                                <span class="badge @statusClass badge-lg">@Model.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Canal:</dt>
                                <dd class="col-sm-9"><span class="badge badge-primary">@Model.Channel</span></dd>

                                <dt class="col-sm-3">Estado:</dt>
                                <dd class="col-sm-9"><span class="badge @statusClass">@Model.Status</span></dd>

                                <dt class="col-sm-3">Fecha Programada:</dt>
                                <dd class="col-sm-9">@(Model.ScheduledDate?.ToString("dd/MM/yyyy HH:mm") ?? "Inmediata")</dd>

                                <dt class="col-sm-3">Fecha Publicada:</dt>
                                <dd class="col-sm-9">@(Model.PublishedDate?.ToString("dd/MM/yyyy HH:mm") ?? "No publicada")</dd>

                                <dt class="col-sm-3">URL Publicación:</dt>
                                <dd class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.PublishedUrl))
                                    {
                                        <a href="@Model.PublishedUrl" target="_blank">@Model.PublishedUrl</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Requiere Aprobación:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.RequiresApproval)
                                    {
                                        <span class="badge badge-warning">Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">No</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Reintentos:</dt>
                                <dd class="col-sm-9">@Model.RetryCount</dd>

                                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                {
                                    <dt class="col-sm-3">Error:</dt>
                                    <dd class="col-sm-9">
                                        <div class="alert alert-danger">
                                            @Model.ErrorMessage
                                        </div>
                                    </dd>
                                }

                                <dt class="col-sm-3">Creado:</dt>
                                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Contenido -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-file-alt mr-2"></i>Contenido</h3>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>Copy:</strong>
                                <div class="p-3 bg-light rounded mt-2">
                                    <p>@Model.Content</p>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Hashtags))
                            {
                                <div class="mb-3">
                                    <strong>Hashtags:</strong>
                                    <div class="mt-2">
                                        @foreach (var hashtag in Model.Hashtags.Split(' '))
                                        {
                                            <span class="badge badge-secondary mr-1">#@hashtag</span>
                                        }
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.MediaUrl))
                            {
                                <div class="mb-3">
                                    <strong>Media:</strong>
                                    <div class="mt-2">
                                        <a href="@Model.MediaUrl" target="_blank" class="btn btn-sm btn-info">
                                            <i class="fas fa-external-link-alt"></i> Ver Media
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Acciones -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-cog mr-2"></i>Acciones</h3>
                        </div>
                        <div class="card-body">
                            @if (Model.Status == "RequiresApproval" && !string.IsNullOrEmpty(Model.DownloadUrl))
                            {
                                <div class="mb-3">
                                    <a href="@Url.Action("DownloadPackage", new { id = Model.Id })" class="btn btn-success btn-block">
                                        <i class="fas fa-download mr-1"></i>Descargar Paquete
                                    </a>
                                    <small class="form-text text-muted">
                                        Descarga el paquete JSON con toda la información lista para publicar manualmente.
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#approveModal">
                                        <i class="fas fa-check mr-1"></i>Marcar como Publicada
                                    </button>
                                    <small class="form-text text-muted">
                                        Marca esta publicación como publicada manualmente.
                                    </small>
                                </div>
                            }

                            <div class="mb-3">
                                <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">
                                    <i class="fas fa-arrow-left mr-1"></i>Volver a Lista
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Modal para Aprobar -->
@if (Model.Status == "RequiresApproval")
{
    <div class="modal fade" id="approveModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Marcar como Publicada</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="Approve" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="publishedUrl">URL de la Publicación</label>
                            <input type="url" class="form-control" id="publishedUrl" name="publishedUrl" placeholder="https://..." />
                            <small class="form-text text-muted">Opcional: URL de la publicación en la red social</small>
                        </div>
                        <div class="form-group">
                            <label for="externalPostId">ID Externo</label>
                            <input type="text" class="form-control" id="externalPostId" name="externalPostId" placeholder="ID del post en la red social" />
                            <small class="form-text text-muted">Opcional: ID del post en la red social</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Marcar como Publicada</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}

